<UserControl
    x:Class="XLight.Wpf.CiceroSpinView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:liftui="https://github.com/pchuan98/Lift.UI"
    xmlns:local="clr-namespace:XLight.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:CiceroSpinViewModel}"
    d:DesignHeight="200"
    d:DesignWidth="250"
    mc:Ignorable="d">

    <StackPanel>
        <UniformGrid
            Margin="10,0"
            Columns="2"
            IsEnabled="{Binding IsConnected}">
            <Button
                Width="100"
                Height="30"
                HorizontalAlignment="Stretch"
                Command="{Binding HomeCommand}"
                Content="复位"
                IsEnabled="{Binding IsControlEnable}" />

            <ToggleButton
                liftui:StatusSwitchElement.HideUncheckedElement="False"
                Command="{Binding SetSpinCommand}"
                Focusable="False"
                IsChecked="{Binding IsSetSpin}"
                IsEnabled="{Binding IsControlEnable}"
                Style="{DynamicResource ToggleButtonCustom}">
                <liftui:StatusSwitchElement.CheckedElement>
                    <Border
                        Background="{DynamicResource PrimaryBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Label
                            Width="100"
                            Background="Transparent"
                            Content="转盘开启"
                            Foreground="White" />
                    </Border>
                </liftui:StatusSwitchElement.CheckedElement>
                <Border
                    Background="{DynamicResource RegionBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="5">
                    <Label
                        Width="100"
                        Background="Transparent"
                        Content="转盘关闭"
                        Foreground="{DynamicResource PrimaryTextBrush}" />
                </Border>
            </ToggleButton>

            <GroupBox
                Height="80"
                Header=" Emission"
                IsEnabled="{Binding IsConnected}"
                Style="{DynamicResource GroupBoxTab}">
                <ComboBox
                    IsEnabled="{Binding IsControlEnable}"
                    ItemsSource="{Binding EmissionCollection}"
                    SelectedIndex="{Binding EmissionIndex}" />
            </GroupBox>

            <ToggleButton
                liftui:StatusSwitchElement.HideUncheckedElement="False"
                Focusable="False"
                IsChecked="{Binding IsEmissionExtraction}"
                IsEnabled="{Binding IsControlEnable}"
                Style="{DynamicResource ToggleButtonCustom}">
                <liftui:StatusSwitchElement.CheckedElement>
                    <Border
                        Background="{DynamicResource PrimaryBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Label
                            Width="100"
                            Background="Transparent"
                            Content="Extraction"
                            Foreground="White" />
                    </Border>
                </liftui:StatusSwitchElement.CheckedElement>
                <Border
                    Background="{DynamicResource RegionBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="5">
                    <Label
                        Width="100"
                        Background="Transparent"
                        Content="Extraction"
                        Foreground="{DynamicResource PrimaryTextBrush}" />
                </Border>
            </ToggleButton>

        </UniformGrid>

        <UniformGrid
            Margin="10,5"
            Columns="3"
            IsEnabled="{Binding IsOperable}">
            <ComboBox
                x:Name="ComComboBox"
                DockPanel.Dock="Left"
                ItemsSource="{Binding SerialComs}"
                SelectedIndex="{Binding SerialIndex, Mode=TwoWay}" />
            <Button
                HorizontalAlignment="Stretch"
                Command="{Binding InitManualCommand}"
                Content="手动连接" />
            <Button
                Margin="2,0"
                HorizontalAlignment="Stretch"
                Command="{Binding InitCommand}"
                Content="自动连接" />
        </UniformGrid>

    </StackPanel>

</UserControl>
