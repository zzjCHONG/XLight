<UserControl
    x:Class="XLight.Wpf.V2SpinView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:liftui="https://github.com/pchuan98/Lift.UI"
    xmlns:local="clr-namespace:XLight.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:V2SpinViewModel}"
    d:DesignHeight="500"
    d:DesignWidth="250"
    mc:Ignorable="d">

    <StackPanel>

        <Button
            Height="30"
            Margin="20,0"
            HorizontalAlignment="Stretch"
            Command="{Binding HomeCommand}"
            Content="复位"
            IsEnabled="{Binding IsConnected}" />

        <UniformGrid Columns="2" IsEnabled="{Binding IsConnected}">

            <GroupBox
                Height="80"
                Margin="10"
                Header=" Spining"
                IsEnabled="{Binding IsConnected}"
                Style="{DynamicResource GroupBoxTab}">
                <ComboBox
                    IsEnabled="{Binding IsSpiningEnable}"
                    ItemsSource="{Binding SpiningCollection}"
                    SelectedIndex="{Binding SpiningIndex}" />
            </GroupBox>
            <ToggleButton
                liftui:StatusSwitchElement.HideUncheckedElement="False"
                Command="{Binding SetSpinCommand}"
                Focusable="False"
                IsChecked="{Binding IsSetSpin}"
                IsEnabled="{Binding IsSetSpinEnable}"
                Style="{DynamicResource ToggleButtonCustom}">
                <liftui:StatusSwitchElement.CheckedElement>
                    <Border
                        Background="{DynamicResource PrimaryBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Label
                            Width="100"
                            Background="Transparent"
                            Content="转盘开启"
                            Foreground="White" />
                    </Border>
                </liftui:StatusSwitchElement.CheckedElement>
                <Border
                    Background="{DynamicResource RegionBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="5">
                    <Label
                        Width="100"
                        Background="Transparent"
                        Content="转盘关闭"
                        Foreground="{DynamicResource PrimaryTextBrush}" />
                </Border>
            </ToggleButton>

            <GroupBox
                Height="80"
                Margin="10"
                Header=" Dichroic"
                IsEnabled="{Binding IsConnected}"
                Style="{DynamicResource GroupBoxTab}">
                <ComboBox
                    IsEnabled="{Binding IsDichroicEnable}"
                    ItemsSource="{Binding DichroicCollection}"
                    SelectedIndex="{Binding DichroicIndex}" />
            </GroupBox>
            <ToggleButton
                liftui:StatusSwitchElement.HideUncheckedElement="False"
                Focusable="False"
                IsChecked="{Binding IsDichroicExtraction}"
                IsEnabled="{Binding IsDichroicEnable}"
                Style="{DynamicResource ToggleButtonCustom}">
                <liftui:StatusSwitchElement.CheckedElement>
                    <Border
                        Background="{DynamicResource PrimaryBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Label
                            Width="100"
                            Background="Transparent"
                            Content="Extraction"
                            Foreground="White" />
                    </Border>
                </liftui:StatusSwitchElement.CheckedElement>
                <Border
                    Background="{DynamicResource RegionBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="5">
                    <Label
                        Width="100"
                        Background="Transparent"
                        Content="Extraction"
                        Foreground="{DynamicResource PrimaryTextBrush}" />
                </Border>
            </ToggleButton>

            <GroupBox
                Height="80"
                Margin="10"
                Header=" Emission"
                IsEnabled="{Binding IsConnected}"
                Style="{DynamicResource GroupBoxTab}">
                <ComboBox
                    IsEnabled="{Binding IsEmissionEnable}"
                    ItemsSource="{Binding EmissionCollection}"
                    SelectedIndex="{Binding EmissionIndex}" />
            </GroupBox>
            <ToggleButton
                liftui:StatusSwitchElement.HideUncheckedElement="False"
                Focusable="False"
                IsChecked="{Binding IsEmissionExtraction}"
                IsEnabled="{Binding IsEmissionEnable}"
                Style="{DynamicResource ToggleButtonCustom}">
                <liftui:StatusSwitchElement.CheckedElement>
                    <Border
                        Background="{DynamicResource PrimaryBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Label
                            Width="100"
                            Background="Transparent"
                            Content="Extraction"
                            Foreground="White" />
                    </Border>
                </liftui:StatusSwitchElement.CheckedElement>
                <Border
                    Background="{DynamicResource RegionBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="5">
                    <Label
                        Width="100"
                        Background="Transparent"
                        Content="Extraction"
                        Foreground="{DynamicResource PrimaryTextBrush}" />
                </Border>
            </ToggleButton>

            <GroupBox
                Height="80"
                Margin="10"
                Header=" Excitation"
                IsEnabled="{Binding IsConnected}"
                Style="{DynamicResource GroupBoxTab}">
                <ComboBox
                    IsEnabled="{Binding IsExcitationEnable}"
                    ItemsSource="{Binding ExcitationCollection}"
                    SelectedIndex="{Binding ExcitationIndex}" />
            </GroupBox>
            <ToggleButton
                liftui:StatusSwitchElement.HideUncheckedElement="False"
                Focusable="False"
                IsChecked="{Binding IsExcitationExtraction}"
                IsEnabled="{Binding IsExcitationEnable}"
                Style="{DynamicResource ToggleButtonCustom}">
                <liftui:StatusSwitchElement.CheckedElement>
                    <Border
                        Background="{DynamicResource PrimaryBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Label
                            Width="100"
                            Background="Transparent"
                            Content="Extraction"
                            Foreground="White" />
                    </Border>
                </liftui:StatusSwitchElement.CheckedElement>
                <Border
                    Background="{DynamicResource RegionBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="5">
                    <Label
                        Width="100"
                        Background="Transparent"
                        Content="Extraction"
                        Foreground="{DynamicResource PrimaryTextBrush}" />
                </Border>
            </ToggleButton>

        </UniformGrid>

        <UniformGrid
            Margin="10,0"
            Columns="3"
            IsEnabled="{Binding IsOperable}">
            <ComboBox
                x:Name="ComComboBox"
                DockPanel.Dock="Left"
                ItemsSource="{Binding SerialComs}"
                SelectedIndex="{Binding SerialIndex, Mode=TwoWay}" />
            <Button
                HorizontalAlignment="Stretch"
                Command="{Binding InitManualCommand}"
                Content="手动连接" />
            <Button
                Margin="2,0"
                HorizontalAlignment="Stretch"
                Command="{Binding InitCommand}"
                Content="自动连接" />
        </UniformGrid>

    </StackPanel>
</UserControl>
